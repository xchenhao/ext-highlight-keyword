{
  "name": "关键词高亮",
  "version": "1.0",
  "description": "添加关键词可使页面中的关键词高亮显示",
  "manifest_version": 3,
  "default_title": "关键词高亮",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "icons": {
    "16": "/icons/icon16.png",
    "32": "/icons/icon32.png",
    "48": "/icons/icon48.png",
    "128": "/icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["/content/content.js"],
      "css": ["/content/content.css"]
    }
  ],
  "action": {
    "default_popup": "/popup/popup.html"
  }
}
